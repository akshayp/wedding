<div class="rsvp">
    <h2> RSVP for our wedding!</h2>
    <form class="pure-form pure-form-aligned" action="/rsvp/" method="POST">
        <input type="hidden" name="csrf" value="{{_csrf}}"/>
        <fieldset>
            <div class="pure-control-group">
                <label for="name">Name(s) *</label>
                <input id="name" type="text" placeholder="Name(s)" required="1" class="pure-u-3-5">
            </div>

            <div class="pure-control-group">
                <label for="name">RSVP code</label>
                <input id="name" type="text" placeholder="RSVP code" required="1" class="pure-u-3-5">
            </div>

            <div class="pure-control-group">
                <label>RSVP*</label>
                <div class="pure-u-3-5">
                    <label for="option-two" class="pure-radio input-wide">
                    <input id="option-two" type="radio" name="rsvp" value="yes" required="1">
                    Happily accepts. Yeehaw
                </label>
                <label for="option-two" class="pure-radio input-wide">
                    <input id="option-two" type="radio" name="rsvp" value="no" required="1">
                    No thanks! We don't like you that much
                </label>
                </div>
            </div>

            <div class="pure-control-group">
                <label for="email">Email Address</label>
                <input id="email" type="email" placeholder="Email Address" class="pure-u-3-5" required="1">
            </div>

            <div class="pure-control-group">
                <label for="textarea">Notes</label>
                <textarea id="textarea" class="pure-u-3-5" rows="5" placeholder="Leave us a message..."></textarea>
            </div>

            <div class="pure-controls">
                <button type="submit" class="pure-button pure-button-primary">Submit</button>
            </div>
        </fieldset>
    </form>
</div>